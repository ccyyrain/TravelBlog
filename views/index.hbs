          <div class="media">
            <div class="media-left">
              <figure class="image is-48x48">
                <img src="{{review_v.[2].user.picture}}" alt="Placeholder image">
              </figure>
            </div>
            <div class="media-content">
              <p class="title is-4 yc des_w">{{review_v.[2].reviewInfo.title}}</p>
              <p class="subtitle is-6 des_w"><span>Trip Location: {{review_v.[2].reviewInfo.locationCountry}}</p>
              </div>
            </div>
            <div id="des_content">
              <p>{{review_v.[2].reviewInfo.text}}</p>
            </div>
          </div>
          <!-- 4 -->
          <div class="card-content off" id="des_4">
            <div class="media">
              <div class="media-left">
                <figure class="image is-48x48">
                  <img src="{{review_v.[3].user.picture}}" alt="Placeholder image">
                </figure>
              </div>
              <div class="media-content">
                <p class="title is-4 yc des_w">{{review_v.[3].reviewInfo.title}}</p>
                <p class="subtitle is-6 des_w"><span>Trip Location: {{review_v.[3].reviewInfo.locationCountry}}</p>
                </div>
              </div>
              <div id="des_content">
                <p>{{review_v.[3].reviewInfo.text}}</p>
              </div>
            </div>
            <!-- 5 -->
            <div class="card-content off" id="des_5">
              <div class="media">
                <div class="media-left">
                  <figure class="image is-48x48">
                    <img src="{{review_v.[4].user.picture}}" alt="Placeholder image">
                  </figure>
                </div>
                <div class="media-content">
                  <p class="title is-4 yc des_w">{{review_v.[4].reviewInfo.title}}</p>
                  <p class="subtitle is-6 des_w"><span>Trip Location: {{review_v.[4].reviewInfo.locationCountry}}</p>
                  </div>
                </div>
                <div id="des_content">
                  <p>{{review_v.[4].reviewInfo.text}}</p>
                </div>
              </div>
            </div>
          </div>
          <!-- </div> -->


          <!-- main content -->
          <div>
            <ul style="list-style-type: none;">
              {{#each review}}
              <li id="task_{{this._id}}" class="toPost">
                <div class="h_content" id="h_content" >
                  <!-- 1st -->
                  <div class="card">
                    <div class="card-image indexPost" id="task_{{this._id}}">
                      <figure class="h_image" style="cursor: pointer;">
                        <img src="/uploadTrip/view/{{this.reviewInfo.pic.[0]}}" alt="Placeholder image">
                      </figure>
                    </div>
                    <div class="card-content" id="h_cardc">
                      <div class="media">
                        <div class="media-left" id="h_pic">
                          <figure class="image is-48x48">
                            <img src={{this.user.picture}} alt="Placeholder image">
                          </figure>
                        </div>
                        <div class="media-content" id="h_media">
                          <p class="title is-4 indexPost yc" id="task_{{this._id}}"><a><u>{{this.reviewInfo.title}}</u></a></p>
                          <p class="subtitle is-6"><span>Trip Location:</span>{{this.reviewInfo.locationCountry}}</p>
                        </div>
                      </div>
                      <div id="h_des">
                        <p class="index-article">{{this.reviewInfo.text}}</p>
                      </div>
                      <p class="cost" style="margin-bottom: 3px"><span>Cost:</span>{{this.reviewInfo.cost}}</p>
                      {{#each this.reviewInfo.label}}
                      <span class="tag" style="color: SteelBlue">#{{this}}</span>

                      {{/each}}
                      <div style="margin-top: 1px">
                        <div style="float: left">
                          <span>Start date:</span>
                          <time style="margin-right: 15px">{{this.reviewInfo.starttime}}</time>
                          <span>End date:</span>
                          <time>{{this.reviewInfo.endtime}}</time>
                        </div>
                        <div class="h_info">
                          <span class="icon"><i class="fa fa-eye"></i></span><span>{{this.reviewInfo.count}}</span>
                          <span class="icon"><i class="fa fa-heart"></i></span><span>{{this.reviewInfo.like.length}}</span>
                        </div>
                      </div>
                    </div>
                  </div>
                </div>
              </li>
              {{/each}}
            </ul>
          </div>
          <!-- main content -->

          <script type = "text/javascript" src = "javascripts/mapApi.js"></script>
