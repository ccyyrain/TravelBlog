      <div class="card-content off" id="des_2">
        <div class="media">
          <div class="media-left">
            <figure class="image is-48x48">
              <img src="{{review_v.[1].user.picture}}" alt="Placeholder image">
            </figure>
          </div>
          <div class="media-content">
            <p class="title is-4 yc des_w">{{review_v.[1].reviewInfo.title}}</p>
            <p class="subtitle is-6 des_w"><span>Trip Location: {{review_v.[1].reviewInfo.locationCountry}}</p>
            </div>
          </div>
          <div id="des_content">
            <p>{{review_v.[1].reviewInfo.text}}</p>
