<div class="index-page" >
  <div class="header">
    <h1 style="text-align:center">Plan your trip TODAY!</h1>
    <div class="control has-icons-right" id="search_div">
      <input class="input is-large" type="text" placeholder="Search" id="search_input">
      <!-- <button onclick="search_basic()" id="search_btn">hello</button> -->
      <span class="icon is-small is-right" > <!-- id="search_btn" onclick="search_basic()" -->
        <i class="fa fa-search " aria-hidden="true"></i>
      </span>
      <div id="search_hide">
        <a class="button is-large" id="search_btn">S</a>
      </div>
    </div>
    <div id="ad_search"><a class="ad_a">Advanced Search</a></div>
    <div id="search_advanced" >
      <a id="ad_hide" class="ad_a">Hide</a>
      <div style="position:relative;">
        <div class="field is-horizontal">
          <div class = "field-label">
            <label class = "label">Location</label>
          </div>
          <div class = "field-body">
            <div class = "field has-addons">
              <div class = "control">
                <div class = "button is-static">
                  Country
                </div>
              </div>
              <div class = "control has-icons-left">
                <input class = "input" placeholder="Enter country" id="s_reviewCountry">
              </input>
              <span class="icon is-small is-left">
                <i class="fa fa-globe"></i>
              </span>
            </div>
          </div>
        </div>
      </div>
      <div class="field is-horizontal">
        <div class = "field-label">
          <label class = "label">Location</label>
        </div>
        <div class = "field-body">
          <div class = "field has-addons">
            <div class = "control">
              <div class = "button is-static">
                City
              </div>
            </div>
            <div class = "control has-icons-left">
              <input class = "input" placeholder="Enter city" id="s_reviewCity">
            </input>
            <span class="icon is-small is-left">
              <i class="fa fa-globe"></i>
            </span>
          </div>
        </div>
      </div>
    </div>
    <div class="field is-horizontal">
      <div class = "field-label">
        <label class = "label">Cost</label>
      </div>
      <div class = "field-body">
        <div class = "field">
          <div class = "control">
            <div class = "select is-info">
              <select id="s_reviewCost">
                <option selected = selected style="display:none"></option>
                <option>$100-$500</option>
                <option>$500-$1000</option>
                <option>$1000-$3000</option>
                <option>more than $3000</option>
              </select>
            </div>
          </div>
        </div>
      </div>
    </div>
    <div class="field is-horizontal">
      <div class = "field-label">
        <label class = "label">Main transport</label>
      </div>
      <div class = "field-body">
        <div class = "field">
          <div class = "control">
            <div class = "select is-info">
              <select id="s_reviewTrans">
                <option selected = selected style="display:none"></option>
                <option>Car</option>
                <option>Air</option>
                <option>Motor</option>
                <option>Bicycle</option>
                <option>Walk</option>
                <option>Ship</option>
                <option>Other</option>
              </select>
            </div>
          </div>
        </div>
      </div>
    </div>
    <div class="field is-horizontal">
      <div class="field-label">
        <label class="label">label</label>
      </div>
      <div class="field-body">
        <div class="box">
          <div class="field is-grouped is-grouped-multiline" id="s_labels">
            {{#each lab}} {{#if this.add}}
            <div class="control">
              <div class="tag is-info s_label_true" id="s_label_true{{this.id}}">
                {{this.name}}
                <button class="delete is-small s_label_delete" id="s_label{{this.id}}"></button>
              </div>
            </div>
            {{/if}} {{/each}}
          </div>
        </div>
      </div>
    </div>
    <div class="field is-horizontal">
      <div class="field-label">
        <label class="label">label pool</label>
      </div>
      <div class="field-body">
        <div class="box" style="width:90%">
          <div class="field is-grouped is-grouped-multiline">
            {{#each lab}}
            <div class="control">
              <button id="s_label_select_{{this.id}}" class="button is-info is-small s_label_select">
                {{this.name}}
              </button>
            </div>
            {{/each}}
          </div>
        </div>
      </div>
    </div>
    <div id = "ad_search_button">
      <span class = "button" style="position:relative;right:0;">Search</span>
    </div>
  </div>
</div>
</div><!-- advanced search -->
</div>


